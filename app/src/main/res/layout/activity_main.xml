<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/show_int"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Interstitial" />

            <Button
                android:id="@+id/show_int_int"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Interstitial Interval" />

            <Button
                android:id="@+id/show_rew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Rewarded" />


            <include layout="@layout/layout_native_container"/>



        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <include layout="@layout/banner_ad" />

    </RelativeLayout>

</RelativeLayout>